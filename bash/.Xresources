Xft*antialias:      true
Xft*autohint:       true
xterm*font: *-fixed-*-*-*-14-*
XTerm.vt100.geometry: 80x32
XTerm.vt100.translations: #override \n\
  Ctrl <Key> minus: smaller-vt-font() \n\
  Ctrl <Key> plus: larger-vt-font()
XTerm*scrollBar:    true
XTerm*rightScrollBar:   false
XTerm*saveLines:    10000
XTerm*toolBar:      On
