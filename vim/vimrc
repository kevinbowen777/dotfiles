

set nocompatible

" Switch syntax highlighting on
syntax on
set encoding=utf-8
set t_Co=256

" Set statusline
set rtp+=/usr/local/lib/python2.7/dist-packages/powerline/bindings/vim/
 
" Enable file type detection and do language-dependent indenting.
filetype off
execute pathogen#infect()
call pathogen#helptags()
filetype plugin indent on

" Behavior
set backspace=indent,eol,start
set history=50
set incsearch
set fileformat=unix

" Indentation
set autoindent
set tabstop=4
set shiftwidth=4
set softtabstop=4
set expandtab
set foldmethod=marker
nnoremap <space> za

" Appearance
set relativenumber
set laststatus=2
set wrap
set linebreak
set textwidth=79
set colorcolumn=80

" Tab-completion in command-line mode
set wildmode=full
set wildmenu

" The following commands disable the arrow keys.
nnoremap <up> <nop>
nnoremap <down> <nop>
nnoremap <left> <nop>
nnoremap <right> <nop>
inoremap <up> <nop>
inoremap <down> <nop>
inoremap <left> <nop>
inoremap <right> <nop>

" The following lines disable the help key.
inoremap <F1> <ESC>
nnoremap <F1> <ESC>
vnoremap <F1> <ESC>

" Flag unecessary whitespace
au BufRead,BufNewFile *.py,*.pyw,*.c,*.h match BadWhitespace /\s\+$/

"-----------------------------------------------------------------------------
"   NERD Tree Plugin Settings
"-----------------------------------------------------------------------------
""" Toggle the NERD Tree on and off with F7
nmap <F7> :NERDTreeToggle<CR>

""" Close the NERD Tree with Shift-F7
nmap <S-F7> :NERDTreeClose<CR>

" Show the bookmarks table on startup
let NERDTreeShowBookmarks=1

" Don't display these kinds of files
let NERDTreeIgnore=[ '\.ncb$', '\.suo$', '\.vcproj\.RIMNET', '\.obj$',
                   \ '\.ilk$', '^BuildLog.htm$', '\.pdb$', '\.idb$',
                   \ '\.embed\.manifest$', '\.embed\.manifest.res$',
                   \  '\.intermediate\.manifest$', '^mt.deps' ]

map,r :NERDTreeFind<CR>
"
colorscheme anotherdark
" 
" temp file locations. make sure subdirectories are created in ~/tmp
set undodir=~/tmp/.undo//
set backupdir=~/tmp/.backup//
set directory=~/tmp/.swp//
""
